# restart sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# start st terminal
super + Return
    st -z 13

# open firefox
super + i
    firefox-esr

# start dmenu (a program launcher), 'm' for menu
super + m
    dmenu_run -S -l 10 -nb '#000000' -nf '#ffffff' -sb '#ff8c00' -sf '#ffffff' -bw 3

# whole screenshot
Print
    maim "/home/$USER/Pictures/$(echo $(date).png | tr " " _)"

# selective screenshot
shift + Print
	maim --select "/home/$USER/Pictures/$(echo $(date).png | tr " " _)"

# power options
ctrl + alt + Delete
   /home/$USER/.config/scripts/power.sh

# mount
super + shift + m
   /home/$USER/.config/scripts/mount.sh

# unmount
super + shift + u
   /home/$USER/.config/scripts/unmount.sh
