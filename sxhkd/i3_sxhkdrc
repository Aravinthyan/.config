# kill application
alt + F4
    i3-msg kill

# restart i3-wm
super + shift + r
    i3-msg restart

# reload i3-wm
super + shift + c
    i3-msg reload

# change focus
super + { ,shift} + {h, j, k, l}
    i3-msg {focus, move} {left, down, up, right}

# horizontal, vertical orientation
alt + {h, v}
    i3-msg split {h, v}

# switch to workspace
super + { ,shift} + {1-9, 0}
    i3-msg {workspace, move container to workspace} {1-9, 0}

# toggle fullscreen mode for the focused container
super + f
    i3-msg fullscreen toggle

# change container layout (stacked, tabbed, default)
super + {s, t, d}
    i3-msg layout {stacking, tabbed, default}

# move to the next workspace
alt + { ,shift} + Tab
    i3-msg workspace {next, prev}

