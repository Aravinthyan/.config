# restart sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# start st terminal
super + Return
    st

# open firefox
super + i
    firefox-esr

# start dmenu (a program launcher), 'm' for menu
super + m
    dmenu_run -S -l 10 -bw 3

# whole screenshot
Print
    maim "/home/$USER/Pictures/$(echo $(date).png | tr " " _)"

# selective screenshot
shift + Print
	maim --select "/home/$USER/Pictures/$(echo $(date).png | tr " " _)"

# selective screenshot - clipboard
ctrl + shift + Print
    maim --select | xclip -selection clipboard -t image/png

# power options
ctrl + alt + Delete
   /home/$USER/.local/bin/power.sh

# mount
super + shift + m
   /home/$USER/.local/bin/mount.sh

# unmount
super + shift + u
   /home/$USER/.local/bin/unmount.sh

# lock screen
super + l
    slock

# suspend and then hibenate
super + s
    systemctl suspend-then-hibernate; slock

# increase sound volume
XF86AudioRaiseVolume
    volume.sh 1

# decrease sound volume
XF86AudioLowerVolume
    volume.sh 0

# mute sound
XF86AudioMute
    volume.sh 2

# increase brightness
ctrl + Up
    brightness.py 1

# decrease brightness
ctrl + Down
    brightness.py 0

# choose audio output
super + a
    audio_output.sh
